 u::file fopen(const u::string& infile, const char *type) {
+#if defined(_MSC_VER)
+    FILE *stream = nullptr;
+    if (fopen_s(&stream, infile.c_str(), type) != 0)
+        return nullptr;
+    return stream;
+#else
